<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.screetts.stockmanagement.fragment.AssignationFragment">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/fragment_assignations">

                <TextView
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/actual_room"
                    android:textSize="20sp"
                    android:text="Room: "
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/camera_view" />

                <SurfaceView
            android:layout_width="348dp"
            android:layout_height="205dp"
            android:id="@+id/camera_view"
                    tools:layout_editor_absoluteX="20dp"
                    app:layout_constraintTop_toTopOf="@+id/guideline" />


        <TextView
            android:layout_width="114dp"
            android:layout_height="33dp"
            android:id="@+id/new_room"
            android:textSize="20sp"
            android:text="New Room: "
            tools:layout_editor_absoluteY="645dp"
            tools:layout_editor_absoluteX="137dp" />
                <TextView
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/actual_material"
                    android:textSize="20sp"
                    android:text="Material: "
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/camera_view"
                    android:layout_marginStart="104dp"
                    app:layout_constraintLeft_toRightOf="@+id/actual_room"
                    android:layout_marginLeft="104dp" />

                <SurfaceView
                    android:layout_width="339dp"
                    android:layout_height="1dp"
                    android:id="@+id/surfaceView"
                    android:background="@color/colorPrimary"
                    tools:layout_editor_absoluteX="23dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/cardView2" />

                <android.support.constraint.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/guideline"
                    app:layout_constraintGuide_begin="20dp"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteY="20dp"
                    tools:layout_editor_absoluteX="0dp" />

                <android.support.constraint.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/guideline2"
                    app:layout_constraintGuide_begin="20dp"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteY="0dp"
                    tools:layout_editor_absoluteX="20dp" />

                <Button
                    android:text="Assign"
                    android:layout_width="wrap_content"
                    android:layout_height="73dp"
                    android:id="@+id/assign_button"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintLeft_toRightOf="@+id/cardView3" />

                <android.support.v7.widget.CardView
                    android:layout_width="171dp"
                    android:layout_height="94dp"
                    android:id="@+id/cardView2"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/actual_material"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    app:layout_constraintLeft_toRightOf="@+id/cardView1"
                    app:layout_constraintHorizontal_bias="1.0">

                        <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/nameMaterial" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="149dp"
                    android:layout_height="94dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/actual_room"
                    android:id="@+id/cardView1"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="16dp">

                        <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/nameRoom" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="267dp"
                    android:layout_height="94dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/surfaceView"
                    android:id="@+id/cardView3"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp">

                        <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/nameNewRoom" />
                </android.support.v7.widget.CardView>
        </android.support.constraint.ConstraintLayout>
</FrameLayout>